@model JAWS.Models.StomatoloskiKarton

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Uredi karton za pacijenta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input type="hidden"asp-for="PacijentId" value="@Model.PacijentId" class="form-control " />
            <div class="form-group">
                <label asp-for="DatumOtvaranjaKartona" class="control-label"></label>
                <input asp-for="DatumOtvaranjaKartona" class="form-control" />
                <span asp-validation-for="DatumOtvaranjaKartona" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PosjedovanjeLoyalKartice" /> @Html.DisplayNameFor(model => model.PosjedovanjeLoyalKartice)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Uredi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
